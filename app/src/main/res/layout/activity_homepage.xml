<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context=".homepage">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose one of these authentication biometrics"
        android:textColor="#E3EFF1"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empreint"
        android:layout_marginLeft="50dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="FingerPrint"
        android:textColor="#FFF5FCFD"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/fin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="277dp"
       android:layout_below="@+id/voice"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Voice"
        android:textColor="#F5FCFD"
        android:textSize="22dp" />
    <ImageView
        android:id="@+id/voice"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="250dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@drawable/v1"/>
    <ImageView
        android:id="@+id/empreint"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@drawable/fingerbutton" />

</RelativeLayout>
